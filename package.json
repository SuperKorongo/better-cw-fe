{
	"name": "store",
	"version": "1.0.0",
	"scripts": {
		"update-everything-to-latest-versions": "npx npm-check-updates -u; npm install --verbose",
		"pre-build": "npm install; npm run copy-static; npm run lint; npm run ts-check",
		"dev": "npm run pre-build; NODE_TLS_REJECT_UNAUTHORIZED=0 vite dev --host",
		"build": "npm run pre-build; vite build",
		"copy-static": "cp ./node_modules/svelte-material-ui/bare.css ./static/svelte-material-ui.css",
		"preview": "npm run build; vite preview --host",
		"ts-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"ts-check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && ./node_modules/.bin/eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.2.6",
		"@mdi/js": "^7.4.47",
		"@smui/button": "^8.0.0-beta.3",
		"@smui/data-table": "^8.0.0-beta.3",
		"@smui/icon-button": "^8.0.0-beta.3",
		"@smui/switch": "^8.0.0-beta.3",
		"@smui/textfield": "^8.0.0-beta.3",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.21.5",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.0.1",
		"@types/uuid": "^10.0.0",
		"@zerodevx/svelte-toast": "^0.9.6",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.2",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.6.8",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.28.6",
		"svelte-check": "^4.2.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0",
		"vite": "^6.3.5"
	},
	"type": "module",
	"dependencies": {
		"bitcoin-address-validation": "^3.0.0",
		"dotenv": "^16.5.0",
		"svelte-carousel": "^1.0.25",
		"svelte-gestures": "^5.1.4",
		"svelte-material-ui": "^8.0.0-beta.3",
		"svelte-tags-input": "^6.0.2"
	},
	"overrides": {
		"@sveltejs/kit": {
			"cookie": "^1.0.2"
		}
	}
}
